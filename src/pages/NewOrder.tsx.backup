import { useState, useEffect } from 'react';
import { useNavigate, Link } from 'react-router-dom';
import { supabase } from '../lib/supabase';
import { MapContainer, TileLayer, Marker, Popup, useMap } from 'react-leaflet';
import { ArrowLeft, MapPin, Search } from 'lucide-react';
import 'leaflet/dist/leaflet.css';
import L from 'leaflet';

delete (L.Icon.Default.prototype as any)._getIconUrl;
L.Icon.Default.mergeOptions({
  iconRetinaUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon-2x.png',
  iconUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png',
  shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png',
});

interface Partner {
  id: string;
  name: string;
  address: string;
  city: string;
  postal_code: string;
  lat: number;
  lon: number;
  distance?: number;
}

function MapUpdater({ center }: { center: [number, number] }) {
  const map = useMap();
  useEffect(() => {
    map.setView(center, 13);
  }, [center, map]);
  return null;
}

export default function NewOrder() {
  const [speed, setSpeed] = useState('express');
  const [weightKg, setWeightKg] = useState('');
  const [address, setAddress] = useState('');
  const [userCoords, setUserCoords] = useState<[number, number] | null>(null);
  const [partners, setPartners] = useState<Partner[]>([]);
  const [selectedPartner, setSelectedPartner] = useState<Partner | null>(null);
  const [loading, setLoading] = useState(false);
  const [searching, setSearching] = useState(false);
  const navigate = useNavigate();

  useEffect(() => {
    loadPartners();
  }, []);

  const loadPartners = async () => {
    try {
      const { data, error } = await supabase
        .from('partners')
        .select('*')
        .eq('is_active', true);

      if (error) throw error;
      setPartners(data || []);
    } catch (error) {
      console.error('Error loading partners:', error);
    }
  };

  const searchAddress = async () => {
    if (!address.trim()) {
      alert('Veuillez entrer une adresse');
      return;
    }

    setSearching(true);

    try {
      const response = await fetch(
        `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}&countrycodes=fr&limit=1`,
        {
          headers: {
            'User-Agent': 'KiloLab/1.0'
          }
        }
      );

      const data = await response.json();

      if (data && data[0]) {
        const lat = parseFloat(data[0].lat);
        const lon = parseFloat(data[0].lon);
        setUserCoords([lat, lon]);

        // Calculer distances
        const partnersWithDistance = partners.map(p => {
          const distance = calculateDistance(lat, lon, p.lat, p.lon);
          return { ...p, distance };
        }).sort((a, b) => (a.distance || 0) - (b.distance || 0));

        setPartners(partnersWithDistance);
      } else {
        alert('Adresse non trouv√©e. Essayez une autre adresse.');
      }
    } catch (error) {
      console.error('Geocoding error:', error);
      alert('Erreur lors de la recherche');
    } finally {
      setSearching(false);
    }
  };

  const calculateDistance = (lat1: number, lon1: number, lat2: number, lon2: number) => {
    const R = 6371;
    const dLat = (lat2 - lat1) * Math.PI / 180;
    const dLon = (lon2 - lon1) * Math.PI / 180;
    const a = 
      Math.sin(dLat/2) * Math.sin(dLat/2) +
      Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
      Math.sin(dLon/2) * Math.sin(dLon/2);
    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
    return R * c;
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    if (!selectedPartner) {
      alert('Veuillez s√©lectionner un point relais sur la carte');
      return;
    }

    if (!weightKg || parseFloat(weightKg) <= 0) {
      alert('Veuillez entrer un poids estim√© valide');
      return;
    }

    setLoading(true);

    try {
      const { data: { user } } = await supabase.auth.getUser();
      if (!user) {
        navigate('/login');
        return;
      }

      const { data: profile } = await supabase
        .from('user_profiles')
        .select('id')
        .eq('email', user.email)
        .single();

      if (!profile) {
        alert('Profil non trouv√©');
        return;
      }

      const pricePerKg = speed === 'premium' ? 500 : speed === 'express' ? 1000 : 1500;
      const estimatedPrice = Math.round(parseFloat(weightKg) * pricePerKg);

      const { data: order, error } = await supabase
        .from('orders')
        .insert({
          client_id: profile.id,
          partner_id: selectedPartner.id,
          speed: speed,
          weight_kg: parseFloat(weightKg),
          price_gross_cents: estimatedPrice,
          status: 'pending_weight'
        })
        .select()
        .single();

      if (error) throw error;

      alert(`Commande cr√©√©e avec succ√®s !\n\nVotre linge sera pes√© au point relais.\nPrix estim√© : ${(estimatedPrice / 100).toFixed(2)}‚Ç¨`);
      navigate('/client-dashboard');
    } catch (error: any) {
      console.error('Error creating order:', error);
      alert('Erreur : ' + error.message);
    } finally {
      setLoading(false);
    }
  };

  const defaultCenter: [number, number] = userCoords || [46.603354, 1.888334];

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 p-6">
      <div className="max-w-7xl mx-auto">
        <div className="mb-6">
          <Link
            to="/client-dashboard"
            className="inline-flex items-center gap-2 text-white/60 hover:text-white transition-all"
          >
            <ArrowLeft className="w-5 h-5" />
            Retour au Dashboard
          </Link>
        </div>

        <h1 className="text-4xl font-bold text-white mb-8">Nouvelle Commande</h1>

        <div className="grid lg:grid-cols-2 gap-8">
          {/* Formulaire */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-8 border border-white/20">
            <form onSubmit={handleSubmit} className="space-y-6">
              <div>
                <label className="block text-white font-semibold mb-3 text-lg">
                  1. Choisissez votre formule
                </label>
                <div className="space-y-3">
                  <label className={`block p-4 rounded-lg border-2 cursor-pointer transition-all ${speed === 'premium' ? 'border-purple-500 bg-purple-500/20' : 'border-white/20 bg-white/5'}`}>
                    <input
                      type="radio"
                      name="speed"
                      value="premium"
                      checked={speed === 'premium'}
                      onChange={(e) => setSpeed(e.target.value)}
                      className="mr-3"
                    />
                    <span className="text-white font-semibold">Premium - 5‚Ç¨/kg</span>
                    <span className="text-white/60 text-sm ml-2">(72-96h)</span>
                  </label>

                  <label className={`block p-4 rounded-lg border-2 cursor-pointer transition-all ${speed === 'express' ? 'border-blue-500 bg-blue-500/20' : 'border-white/20 bg-white/5'}`}>
                    <input
                      type="radio"
                      name="speed"
                      value="express"
                      checked={speed === 'express'}
                      onChange={(e) => setSpeed(e.target.value)}
                      className="mr-3"
                    />
                    <span className="text-white font-semibold">Express - 10‚Ç¨/kg</span>
                    <span className="text-white/60 text-sm ml-2">(24h) ‚≠ê</span>
                  </label>

                  <label className={`block p-4 rounded-lg border-2 cursor-pointer transition-all ${speed === 'ultra_express' ? 'border-orange-500 bg-orange-500/20' : 'border-white/20 bg-white/5'}`}>
                    <input
                      type="radio"
                      name="speed"
                      value="ultra_express"
                      checked={speed === 'ultra_express'}
                      onChange={(e) => setSpeed(e.target.value)}
                      className="mr-3"
                    />
                    <span className="text-white font-semibold">Ultra Express - 15‚Ç¨/kg</span>
                    <span className="text-white/60 text-sm ml-2">(6h)</span>
                  </label>
                </div>
              </div>

              <div>
                <label className="block text-white font-semibold mb-2 text-lg">
                  2. Poids estim√© (kg)
                </label>
                <input
                  type="number"
                  step="0.5"
                  value={weightKg}
                  onChange={(e) => setWeightKg(e.target.value)}
                  placeholder="Ex: 3.5"
                  required
                  className="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-purple-500"
                />
                <p className="text-white/60 text-sm mt-2">
                  üí° Le poids sera v√©rifi√© au point relais. Prix estim√© : <strong className="text-yellow-400">
                    {weightKg ? (parseFloat(weightKg) * (speed === 'premium' ? 5 : speed === 'express' ? 10 : 15)).toFixed(2) : '0.00'}‚Ç¨
                  </strong>
                </p>
              </div>

              <div>
                <label className="block text-white font-semibold mb-2 text-lg">
                  3. Votre adresse
                </label>
                <div className="flex gap-2">
                  <input
                    type="text"
                    value={address}
                    onChange={(e) => setAddress(e.target.value)}
                    placeholder="Ex: 10 Rue de Rivoli, Paris"
                    className="flex-1 px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-purple-500"
                    onKeyPress={(e) => e.key === 'Enter' && (e.preventDefault(), searchAddress())}
                  />
                  <button
                    type="button"
                    onClick={searchAddress}
                    disabled={searching}
                    className="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-all disabled:opacity-50 flex items-center gap-2"
                  >
                    <Search className="w-5 h-5" />
                    {searching ? 'Recherche...' : 'Chercher'}
                  </button>
                </div>
              </div>

              <div>
                <label className="block text-white font-semibold mb-2 text-lg">
                  4. Point relais s√©lectionn√©
                </label>
                {selectedPartner ? (
                  <div className="bg-green-500/20 border border-green-500/50 rounded-lg p-4">
                    <p className="text-white font-semibold">{selectedPartner.name}</p>
                    <p className="text-white/70 text-sm">{selectedPartner.address}</p>
                    <p className="text-white/70 text-sm">{selectedPartner.postal_code} {selectedPartner.city}</p>
                    {selectedPartner.distance && (
                      <p className="text-green-400 text-sm mt-2">
                        üìç √Ä {selectedPartner.distance.toFixed(1)} km de vous
                      </p>
                    )}
                  </div>
                ) : (
                  <div className="bg-yellow-500/20 border border-yellow-500/50 rounded-lg p-4 text-yellow-200">
                    Cliquez sur un marqueur sur la carte ‚Üí
                  </div>
                )}
              </div>

              <button
                type="submit"
                disabled={loading || !selectedPartner}
                className="w-full bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-bold py-4 rounded-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed text-lg"
              >
                {loading ? 'Cr√©ation...' : 'Cr√©er la commande'}
              </button>
            </form>
          </div>

          {/* Carte */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl overflow-hidden border border-white/20">
            <div className="bg-slate-900/50 p-4 border-b border-white/10">
              <h3 className="text-white font-semibold flex items-center gap-2">
                <MapPin className="w-5 h-5" />
                Points relais pr√®s de vous
              </h3>
            </div>

            <div className="h-[600px] relative">
              <MapContainer
                center={defaultCenter}
                zoom={userCoords ? 13 : 6}
                style={{ height: '100%', width: '100%' }}
              >
                <TileLayer
                  attribution='&copy; OpenStreetMap'
                  url="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
                />

                {userCoords && (
                  <MapUpdater center={userCoords} />
                )}

                {userCoords && (
                  <Marker
                    position={userCoords}
                    icon={new L.Icon({
                      iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-blue.png',
                      shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png',
                      iconSize: [25, 41],
                      iconAnchor: [12, 41],
                      popupAnchor: [1, -34],
                      shadowSize: [41, 41]
                    })}
                  >
                    <Popup>
                      <div className="p-2">
                        <p className="font-bold">üìç Vous √™tes ici</p>
                      </div>
                    </Popup>
                  </Marker>
                )}

                {partners.map((partner) => (
                  <Marker
                    key={partner.id}
                    position={[partner.lat, partner.lon]}
                    eventHandlers={{
                      click: () => setSelectedPartner(partner)
                    }}
                  >
                    <Popup>
                      <div className="p-2">
                        <h3 className="font-bold text-lg mb-1">{partner.name}</h3>
                        <p className="text-sm text-gray-600">{partner.address}</p>
                        <p className="text-sm text-gray-600">{partner.postal_code} {partner.city}</p>
                        {partner.distance && (
                          <p className="text-sm text-green-600 font-semibold mt-2">
                            üìç {partner.distance.toFixed(1)} km
                          </p>
                        )}
                        <button
                          onClick={() => setSelectedPartner(partner)}
                          className="mt-3 bg-purple-600 text-white px-4 py-2 rounded text-sm w-full hover:bg-purple-700"
                        >
                          S√©lectionner ce point relais
                        </button>
                      </div>
                    </Popup>
                  </Marker>
                ))}
              </MapContainer>
            </div>

            {partners.length > 0 && userCoords && (
              <div className="bg-slate-900/50 p-4 border-t border-white/10 max-h-48 overflow-y-auto">
                <h4 className="text-white font-semibold mb-3">Points relais les plus proches :</h4>
                <div className="space-y-2">
                  {partners.slice(0, 5).map((partner) => (
                    <button
                      key={partner.id}
                      onClick={() => setSelectedPartner(partner)}
                      className={`w-full text-left p-3 rounded-lg transition-all ${
                        selectedPartner?.id === partner.id 
                          ? 'bg-purple-600 text-white' 
                          : 'bg-white/5 text-white/80 hover:bg-white/10'
                      }`}
                    >
                      <p className="font-semibold text-sm">{partner.name}</p>
                      <p className="text-xs opacity-80">{partner.city}</p>
                      {partner.distance && (
                        <p className="text-xs mt-1">üìç {partner.distance.toFixed(1)} km</p>
                      )}
                    </button>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
}
